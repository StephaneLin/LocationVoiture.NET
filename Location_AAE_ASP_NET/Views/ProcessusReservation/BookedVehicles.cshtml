@model IEnumerable<Location_AAE_ASP_NET.Models.Reservation>

@{
    ViewBag.Title = "Booked vehicles";
}

<h2>Véhicules réservés</h2>

<p>
    @Html.ActionLink("Create New", "DateAndPlaceChoice")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.vehicule.marque)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.debutDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.finDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.reservationDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.vehicule.marque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.debutDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.finDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.reservationDate)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.reservationId })
            </td>
        </tr>
    }

</table>